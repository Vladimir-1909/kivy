<CurButton@MDRectangleFlatButton>
    font_size: '25sp'
    md_bg_color: 17 / 226, 177 / 288, 94 / 225, 1
    text_color: 1, 1, 1, 1

<Container>:
    rows: 2
    text_label: text_label

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.25
        padding: 30

        MDLabel:
            text: ''
            id: text_label
            font_size: '45sp'
            md_bg_color: 17 / 226, 177 / 288, 94 / 225, 1

    GridLayout:
        cols: 6

        BoxLayout:
            orientation: 'vertical'

            CurButton:
                text: 'EUR'
                size_hint: 1, 1
                on_release:
                    root.curs(self.text)


