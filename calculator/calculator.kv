<CalcButton@MDRectangleFlatButton>
    font_size: '20sp'
    md_bg_color: 214 / 255, 177 / 255, 73 / 255, 1
    text_color: 1, 1, 1, 1

<Container>:
    rows: 3
    text_label: text_label

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.25
        padding: 30

        MDLabel:
            text: ''
            id: text_label
            font_size: '45sp'

    GridLayout:
        cols: 4

        BoxLayout:
            orientation: 'vertical'

            CalcButton:
                text: '7'
                size_hint: 1, 1
                on_release:
                    root.setNumber(7)

            CalcButton:
                text: '4'
                size_hint: 1, 1
                on_release:
                    root.setNumber(4)

            CalcButton:
                text: '1'
                size_hint: 1, 1
                on_release:
                    root.setNumber(1)

            CalcButton:
                text: '0'
                size_hint: 1, 1
                on_release:
                    root.setNumber(0)

        BoxLayout:
            orientation: 'vertical'

            CalcButton:
                text: '8'
                size_hint: 1, 1
                on_release:
                    root.setNumber(8)

            CalcButton:
                text: '5'
                size_hint: 1, 1
                on_release:
                    root.setNumber(5)

            CalcButton:
                text: '2'
                size_hint: 1, 1
                on_release:
                    root.setNumber(2)

            CalcButton:
                text: '.'
                size_hint: 1, 1
                on_release:
                    root.setPoint()

        BoxLayout:
            orientation: 'vertical'

            CalcButton:
                text: '9'
                size_hint: 1, 1
                on_release:
                    root.setNumber(9)

            CalcButton:
                text: '6'
                size_hint: 1, 1
                on_release:
                    root.setNumber(6)

            CalcButton:
                text: '3'
                size_hint: 1, 1
                on_release:
                    root.setNumber(3)

            CalcButton:
                text: 'AC'
                size_hint: 1, 1
                on_release:
                    root.clearAll()

        BoxLayout:
            orientation: 'vertical'

            CalcButton:
                text: '*'
                size_hint: 1, 1
                on_release:
                    root.calculate('*')

            CalcButton:
                text: '/'
                size_hint: 1, 1
                on_release:
                    root.calculate('/')

            CalcButton:
                text: '-'
                size_hint: 1, 1
                on_release:
                    root.calculate('-')

            CalcButton:
                text: '+'
                size_hint: 1, 1
                on_release:
                    root.calculate('+')

    AnchorLayout:
        anchor_y: 'bottom'
        size_hint: 1, 0.15

        CalcButton:
            text: '='
            size_hint: 1, 1
            on_release:
                root.result()
